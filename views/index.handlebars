<h1  id="title"> Eat-Da-Burger! </h1>
{{!-- <img id="burger-img" src="burger/public/assets/img/hiclipart.png" alt="Cartoon Burger"> --}}

<div class="container" id="input-area">
    <h2> Add a burger! </h2>
    <p> Type in the burger of your dreams, then press submit! </p>

    <form class="create-form">
    <div class="form-group">
        <input type="text" id="ca" name="burger-name">
    </div>
    <button type="submit"> SHOW ME THE BURGER </button>
    </form>
</div>

<div class="container" id="waiting">
    <h2>Burgers waiting to be DEVOURED</h2>

    <ul>
    {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
    {{/each}}
    </ul>
</div>

<div class="container" id="have-been">
    <h2>Burgers that have been devoured</h2>

    <ul>
    {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
    {{/each}}
    </ul>
</div>